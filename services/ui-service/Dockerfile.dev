# Development Dockerfile for UI Service
FROM node:22-alpine

# Install bash for the dev-start.sh script
RUN apk add --no-cache bash

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Expose port 3000 for Vite dev server
EXPOSE 3000

# Make the dev start script executable
RUN chmod +x dev-start.sh

# Start the development server
CMD ["./dev-start.sh"]