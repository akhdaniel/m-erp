# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security - CRITICAL: Update these values!
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/user_auth_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# CORS Configuration - Update with your frontend domains
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://admin.your-domain.com

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_GENERAL=100/minute
RATE_LIMIT_ADMIN=20/minute

# Account Security
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PROGRESSIVE_LOCKOUT=true

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_HISTORY_COUNT=5
PASSWORD_MIN_COMPLEXITY=60

# Audit & Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_RETENTION_DAYS=90

# SSL/TLS Security
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
SECURE_COOKIES=true

# API Documentation (disable in production)
DOCS_ENABLED=false

# Monitoring & Observability
METRICS_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Service Configuration
PORT=8000
HOST=0.0.0.0

# External Services (optional)
# EMAIL_SERVICE_URL=https://your-email-service.com/api
# NOTIFICATION_SERVICE_URL=https://your-notification-service.com/api